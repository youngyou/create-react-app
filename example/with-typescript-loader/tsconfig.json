{
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": [
            "es6"
        ],
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "declaration": true,
        "removeComments": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}